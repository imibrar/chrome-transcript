{
  "manifest_version": 3,
  "name": "YouTube English Practice",
  "version": "1.0.0",
  "description": "Practice English speaking using YouTube transcripts with sentence navigation, A-B loops, and speed control",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-D1the7jw.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_idle",
      "css": [
        "assets/content-dQWOMObz.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "resources": [
        "src/content/*",
        "src/components/*",
        "src/assets/*",
        "assets/content-D1the7jw.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
