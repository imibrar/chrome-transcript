{
  "manifest_version": 3,
  "name": "YouTube English Practice",
  "version": "1.0.0",
  "description": "Practice English speaking using YouTube transcripts with sentence navigation, A-B loops, and speed control",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content/index.ts"],
      "css": ["src/assets/styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/*", "src/components/*", "src/assets/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
